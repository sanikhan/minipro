<p id="notice"><%= notice %></p>

<h1>Listing Supplies</h1>

<table border="1" style="width:80%">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Date</th>
      <th>Supplier name</th>
      <th>Product name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.quantity %></td>
        <td><%= supply.date %></td>
        <td><%= supply.supplier_name %></td>
        <td><%= supply.product_name %></td>
        <td><%= link_to 'Show', supply %></td>
        <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

